<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MeItemStyle">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/setting_item_selector</item>
        <item name="android:drawableRight">@mipmap/me_item_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SelectItem">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#33cc33</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/select_bg</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
</resources>
