<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/douban_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_movie_select_title"
            style="@style/ItemTitle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_movie_jd_select_item"
                style="@style/SelectItem"
                android:layout_marginLeft="15dp"
                android:text="经典" />

            <TextView
                android:id="@+id/tv_movie_dbgf_select_item"
                style="@style/SelectItem"
                android:text="豆瓣高分" />

            <TextView
                android:id="@+id/tv_movie_lmjp_select_item"
                style="@style/SelectItem"
                android:text="冷门佳片" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/douban_item_bg"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_movie_jq_select_item"
                    style="@style/SelectItem"
                    android:layout_marginLeft="15dp"
                    android:text="剧情" />

                <TextView
                    android:id="@+id/tv_movie_aq_select_item"
                    style="@style/SelectItem"
                    android:text="爱情" />

                <TextView
                    android:id="@+id/tv_movie_xj_select_item"
                    style="@style/SelectItem"
                    android:text="喜剧" />

                <TextView
                    android:id="@+id/tv_movie_kh_select_item"
                    style="@style/SelectItem"
                    android:text="科幻" />

                <TextView
                    android:id="@+id/tv_movie_dz_select_item"
                    style="@style/SelectItem"
                    android:text="动作" />

                <TextView
                    android:id="@+id/tv_movie_xy_select_item"
                    style="@style/SelectItem"
                    android:text="悬疑" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_movie_zy_select_item"
                    style="@style/SelectItem"
                    android:layout_marginLeft="15dp"
                    android:text="治愈" />

                <TextView
                    android:id="@+id/tv_movie_qc_select_item"
                    style="@style/SelectItem"
                    android:text="青春" />

                <TextView
                    android:id="@+id/tv_movie_wy_select_item"
                    style="@style/SelectItem"
                    android:text="文艺" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_movie_rb_select_item"
                style="@style/SelectItem"
                android:layout_marginLeft="15dp"
                android:text="日本" />

            <TextView
                android:id="@+id/tv_movie_hg_select_item"
                style="@style/SelectItem"
                android:text="韩国" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>